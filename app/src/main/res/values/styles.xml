<resources>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextAppearance.CafeteriaInfo" parent="android:Widget.TextView">
        <item name="android:layout_width">@dimen/text_time_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.CafeteriaInfo.Time" parent="TextAppearance.CafeteriaInfo">
        <item name="android:layout_width">@dimen/text_time_width</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.CafeteriaInfo.Time.Walk" parent="TextAppearance.CafeteriaInfo.Time">
        <item name="android:drawableStart">@drawable/ic_directions_walk_24dp</item>
        <item name="android:drawableLeft">@drawable/ic_directions_walk_24dp</item>
    </style>

    <style name="TextAppearance.CafeteriaInfo.Time.Wait" parent="TextAppearance.CafeteriaInfo.Time">
        <item name="android:drawableStart">@drawable/ic_access_time_24dp</item>
        <item name="android:drawableLeft">@drawable/ic_access_time_24dp</item>
    </style>

    <style name="TextAppearance.CafeteriaInfo.Distance" parent="TextAppearance.CafeteriaInfo.Time">
        <item name="android:drawableStart">@drawable/ic_navigation_24dp</item>
        <item name="android:drawableLeft">@drawable/ic_navigation_24dp</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">?colorOnPrimary</item>
    </style>
</resources>
